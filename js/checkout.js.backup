// Hien thi hang trong gio
async function showProductCart() {
    const listOrder = document.getElementById("list-order-checkout");
    
    try {
        console.log('đŸ›’ Loading cart for checkout...');
        
        let cartItems = [];
        
        // Always try localStorage first for reliability
        try {
            const currentUser = JSON.parse(localStorage.getItem('currentuser') || '{}');
            if (currentUser && Array.isArray(currentUser.cart)) {
                cartItems = currentUser.cart;
                console.log('âœ… Cart loaded from localStorage:', cartItems.length, 'items');
            }
        } catch (localError) {
            console.error('âŒ Error reading from localStorage:', localError);
        }
        
        // If we have API and no cart from localStorage, try API
        if (api && cartItems.length === 0) {
            try {
                console.log('đŸŒ Trying to load cart from API...');
                const cartData = await api.getCart();
                cartItems = cartData.cart || [];
                console.log('âœ… Cart loaded from API:', cartItems.length, 'items');
            } catch (apiError) {
                console.warn('â ï¸ API failed, using localStorage:', apiError.message);
            }
        }
        
        console.log('đŸ“¦ Final cart items:', cartItems);
        
        let listOrderHtml = '';
        
        if (!listOrder) {
            console.error('âŒ Element "list-order-checkout" not found');
            return;
        }
        
        if (cartItems.length === 0) {
            listOrderHtml = '<p style="text-align: center; padding: 20px; color: #666;">Giá» hĂ ng trá»‘ng</p>';
        } else {
            // Get products from localStorage
            let products = [];
            try {
                products = JSON.parse(localStorage.getItem('products') || '[]');
                console.log('đŸ• Available products:', products.length);
            } catch (prodError) {
                console.error('âŒ Error loading products:', prodError);
                products = [];
            }
            
            // Get product details for each cart item
            for (const item of cartItems) {
                if (!item || typeof item.id === 'undefined' || !item.soluong) {
                    console.warn('â ï¸ Invalid cart item:', item);
                    continue;
                }
                
                const product = products.find(p => p && p.id == item.id); // Use == for type flexibility
                
                if (product) {
                    listOrderHtml += `<div class="food-total">
                        <div class="count">${item.soluong}x</div>
