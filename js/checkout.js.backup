// Cart helper functions for checkout
async function getAmountCart() {
    if (!api) {
        // Fallback to localStorage for testing
        const currentUser = JSON.parse(localStorage.getItem('currentuser'));
        if (currentUser && currentUser.cart) {
            return currentUser.cart.reduce((total, item) => total + parseInt(item.soluong), 0);
        }
        return 0;
    }
    
    try {
        const cartData = await api.getCart();
        const cartItems = cartData.cart || [];
        return cartItems.reduce((total, item) => total + parseInt(item.soluong), 0);
    } catch (error) {
        console.error('Error getting cart amount:', error);
        // Fallback to localStorage
        const currentUser = JSON.parse(localStorage.getItem('currentuser'));
        if (currentUser && currentUser.cart) {
            return currentUser.cart.reduce((total, item) => total + parseInt(item.soluong), 0);
        }
        return 0;
    }
}

async function getCartTotal() {
    if (!api) {
        // Fallback to localStorage for testing
        const currentUser = JSON.parse(localStorage.getItem('currentuser'));
        const products = JSON.parse(localStorage.getItem('products')) || [];
        
        if (currentUser && currentUser.cart) {
            let total = 0;
            for (const item of currentUser.cart) {
                const product = products.find(p => p.id === item.id);
                if (product) {
                    total += parseInt(item.soluong) * parseInt(product.price);
                }
            }
            return total;
        }
        return 0;
    }
    
    try {
        const cartData = await api.getCart();
        const cartItems = cartData.cart || [];
        
        let total = 0;
        for (const item of cartItems) {
            // Get product details
            const products = JSON.parse(localStorage.getItem('products')) || [];
            const product = products.find(p => p.id === item.id);
            
            if (product) {
                total += parseInt(item.soluong) * parseInt(product.price);
            }
        }
        
        return total;
    } catch (error) {
        console.error('Error calculating cart total:', error);
        // Fallback to localStorage
        const currentUser = JSON.parse(localStorage.getItem('currentuser'));
        const products = JSON.parse(localStorage.getItem('products')) || [];
        
        if (currentUser && currentUser.cart) {
            let total = 0;
            for (const item of currentUser.cart) {
                const product = products.find(p => p.id === item.id);
                if (product) {
                    total += parseInt(item.soluong) * parseInt(product.price);
                }
            }
            return total;
        }
        return 0;
    }
}

// vnd function for formatting currency
function vnd(price) {
    return price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
}

